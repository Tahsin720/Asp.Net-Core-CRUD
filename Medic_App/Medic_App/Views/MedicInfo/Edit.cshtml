@model Medic_Info
<form method = "post" asp-action="Edit">
    <div class = "border-bottom p-3 mt-4">
        <div class = "row pb-2">
            <h2 class = "text-primary">Edit Medic Info</h2>
            <hr />
        </div>

        <div class = "mb-3">
            <label asp-for="Medicine_Name"></label>
            <input asp-for="Medicine_Name" class="form-control" />
            <span asp-validation-for="Medicine_Name" class="text-danger"></span>
        </div>

        <div class = "mb-3">
            <label asp-for="Medicine_Quantity"></label>
            <input asp-for="Medicine_Quantity" class="form-control" />
            <span asp-validation-for="Medicine_Quantity" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width: 150px; margin-left: 30%">Update</button>
        <a asp-controller="MedicInfo" asp-action="Index" class="btn btn-primary" style="width:150px">
            Back
        </a>
    </div>
</form>
